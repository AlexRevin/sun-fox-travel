<% content_for :header_content do %>
  <div class='span2 fox_logo'></div>
  <div class="row">
    <div class="span10 top_line">
      <%= render :partial => "top_line"%>
    </div>
    <div class="row">
      <%= form_for Post.new do |f| %>
        <div class="span10">
          <div class="row">
            <div class="span7 offset3">
              <div class="wizard-starter" data-title="Скажи, <%=current_user.username %>, не пора ли нам добавить новое путешествие?" data-placement="left">
                <p class="lead" >Выбери места где ты был и погнали!</p>
              </div>
            </div>
          </div>
          <div class="row wizard-region-select">
            <%= render :partial => "/elements/ui_country_city" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span2"></div>
      <div class="span10">
        <table class="table table-condensed table-hover span9 show-posts">
          <thead>
            <tr>
              <th class="span2"></th>
              <th class="span6"></th>
              <th class="span1"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |p| %>
              <tr>
                <td><%= link_to raw(image_tag p.cover_item.asset.image.md_thumb.url), post_path(p) %></td>
                <td>
                  <div>
                    <span><strong><%= link_to "title", edit_post_path(p)%></strong></span>
                  </div>
                  <div>
                    <ul class="list-locations">
                      <li class="m-btn mini red"><%= p.asset_collection.try(:assets).try(:count) || 0 %>&nbsp;<i class="icon-picture icon-white"></i></li>
                      <% p.locations.each do |l| %>
                        <% color = l.is_a?(Country) ? "green" : "blue" %>
                        <li><a href="#" class="m-btn mini <%=color%>"><%=l.name_ru%></a></li>
                      <% end %>
                    </ul>
                    <div class="clear"></div>                    
                  </div>
                </td>
                <td><strong><%= link_to raw('<i class="icon-remove-circle"></i>'), post_path(p), :method => :delete %></strong></td>
              </tr>
            </tr>
            <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>