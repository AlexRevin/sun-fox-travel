<% content_for :header_content do %>
  <div class='span2 fox_logo'></div>
  <div class="row">
    <div class="span10 top_line">
      <%= render :partial => "top_line"%>
    </div>
    <div class="row">
      <%= form_for Post.new do |f| %>
        <div class="span10">
          <div class="row">
            <div class="span7 offset3">
              <div class="wizard-starter" data-title="Скажи, <%=current_user.username %>, не пора ли нам добавить новое путешествие?" data-placement="left">
                <p class="lead" >Выбери места где ты был и погнали!</p>
              </div>
            </div>
          </div>
          <div class="row wizard-region-select">
            <%= render :partial => "/elements/ui_country_city" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span2"></div>
      <div class="span10">
        <table class="table table-condensed table-hover span9 show-posts">
          <thead>
            <tr>
              <th class="span2"></th>
              <th class="span8"></th>
            </tr>
          </thead>
          <tbody>
            <%= render :partial => "post_item", :collection => @posts %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>