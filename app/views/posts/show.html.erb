<% content_for :header_content do %>
  <div class='span1'>
    <div class="fox_logo_sm"></div>
  </div>
  <div class="row">
    <div class="span11 top_line">
      <%= render :partial => "top_line"%>
    </div>

    <div class="row">
      <% if can? :share, @post %> 
      <div class="span4">
        <%= render :partial => "share_opts", :locals => {:post => @post} %>
      </div>
      <% end %>
    </div>

  </div>
<% end %>
<div class="row">
  <div class="span9">
    <% @post.post_items.asc(:pos).each do |pi| %>
      <div class="item-block">
        <div class="image">
          <% if pi.asset.present? %>
            <img src="<%=pi.asset.image.view.url%>">
          <% end %>
        </div>
        <% if pi.text.present? %>
          <div class="text dropdown">
            <span><%=raw pi.text_html%></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="span3"></div>
</div>