<div class="row top-row">
  <div class="span7 top-menu">
    <%= render :partial => "/elements/top_menu"%>
  </div>

  <div class="span3 user-auth">
    <% unless user_signed_in? %>
      <div class="btn-group enter-button">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          Войти
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Sign in with Facebook",  user_omniauth_authorize_path(:facebook) %></li>
        </ul>
      </div>
    <% else %>
      <blockquote>
        <p>Hola, <%= current_user.username %> &nbsp; <%= link_to destroy_user_session_path, :method => :delete do %> 
          <button class="close">&times;</button>  
          <% end %> </p>
      </blockquote>

    <% end %>
  </div>
</div>