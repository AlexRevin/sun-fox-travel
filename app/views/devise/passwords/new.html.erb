<% content_for :header_content do %>
  <%= render :partial => "/shared/header_content"%>
<% end %>
<div class="span5 well offset3">
  <h4>Забыл пароль?</h4>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <p><%= f.email_field :email, :class=>"m-wrap m-ctrl-large", :placeholder => "email" %></p>
    
    <span><button type="submit" class="m-btn blue">Отправить инструкции по восстановлению</button>
  <% end %>

</div>
